    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>


    <include layout="@layout/grid_megacredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/grid_megacredit"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />
    <include layout="@layout/grid_steel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/grid_steel"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />
    <include layout="@layout/grid_titanium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/grid_titanium"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <include layout="@layout/grid_global_parameters"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/grid_global_params"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <include layout="@layout/grid_plants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/grid_plants"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />
    <include layout="@layout/grid_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/grid_energy"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />
      <include layout="@layout/grid_heat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/grid_heat"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <include layout="@layout/grid_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/grid_rating"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />



