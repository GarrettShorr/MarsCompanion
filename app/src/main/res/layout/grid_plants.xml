<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/plants"
        android:textColor="#006400"
        android:textSize="@dimen/text_extra_large"
        android:textStyle="bold" />


    <com.garrettshorr.marscompanion.Widgets.HorizontalNumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:currentValue="0"
        app:minValue="0"
        app:mode="currentValue" />

    <com.garrettshorr.marscompanion.Widgets.HorizontalNumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:currentValue="0"
        app:minValue="0"></com.garrettshorr.marscompanion.Widgets.HorizontalNumberPicker>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:drawableLeft="@drawable/plants"
        android:drawableRight="@drawable/trees"
        android:gravity="center"
        android:minHeight="32dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:text="x8 to" />

</LinearLayout>