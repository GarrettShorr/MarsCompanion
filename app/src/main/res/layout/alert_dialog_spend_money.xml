<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="4"
    android:rowCount="3"
    android:padding="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MegaCredits:"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_vertical"/>
    <com.garrettshorr.marscompanion.Widgets.HorizontalNumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        app:mode="currentValue"
        android:layout_gravity="center_vertical"
        android:id="@+id/alert_mega_credits"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="center_vertical"
        android:text="x1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_gravity="center_vertical"
        android:id="@+id/result_credits"
        android:text=""/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steel:"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_vertical"/>
    <com.garrettshorr.marscompanion.Widgets.HorizontalNumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        app:mode="currentValue"
        android:layout_gravity="center_vertical"
        android:id="@+id/alert_steel"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="center_vertical"
        android:id="@+id/alert_multiplier_steel"
        android:text="x2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_gravity="center_vertical"
        android:id="@+id/result_steel"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="20dp"
        android:text="Titanium:"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_vertical"/>
    <com.garrettshorr.marscompanion.Widgets.HorizontalNumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        app:mode="currentValue"
        android:layout_gravity="center_vertical"
        android:id="@+id/alert_titanium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_gravity="center_vertical"
        android:id="@+id/alert_multiplier_titanium"
        android:maxHeight="20dp"

        android:text="x3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_gravity="center_vertical"
        android:id="@+id/result_titanium"
        android:maxHeight="20dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: "/>

</GridLayout>